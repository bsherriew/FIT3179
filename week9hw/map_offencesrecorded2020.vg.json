{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 500,
  "title": {
    "text": "Offences Recorded by Local Government Area in the Year Ending June 2020",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/bsherriew/FIT3179/master/week9hw/Table1_LGA_Recorded_Offences_2020.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/bsherriew/FIT3179/master/week9hw/VIC_LGA_POLYGON_SHP_GDA2020.topojson",
      "format": {
        "type": "topojson",
        "feature": "VIC_LGA_POLYGON_SHP_GDA2020",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"LGA_NAME\"]",
          "as": "properties.LGA_NAME"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "LGA",
          "fields": ["properties.ABB_NAME"],
          "values": ["Rate per 100,000 population"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Rate per 100,000 population\"]) && isFinite(+datum[\"Rate per 100,000 population\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "equirectangular"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Rate per 100,000 population"},
          "tooltip": {
            "signal": "{\"Local Government Area\": isValid(datum[\"properties.LGA_NAME\"]) ? datum[\"properties.LGA_NAME\"] : \"\"+datum[\"properties.LGA_NAME\"], \"Rate per 100,000 population\": format(datum[\"Rate per 100,000 population\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Rate per 100,000 population: \" + (format(datum[\"Rate per 100,000 population\"], \"\")) + \"; Local Government Area: \" + (isValid(datum[\"properties.LGA_NAME\"]) ? datum[\"properties.LGA_NAME\"] : \"\"+datum[\"properties.LGA_NAME\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": [0, 20000],
      "range": {"scheme": "bluepurple"},
      "interpolate": "hcl",
      "zero": true
    }
  ],
  "legends": [
    {
      "direction": "horizontal",
      "gradientLength": 250,
      "orient": "top-right",
      "fill": "color",
      "title": "Rate per 100,000 population"
    }
  ],
  "config": {}
}